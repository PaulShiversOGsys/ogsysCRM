@model ogsysCRM.ViewModels.DetailsCustomerViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                @if (Model.AvatarUrl != string.Empty)
                {
                    <img src="@Model.AvatarUrl" />
                }
            </div>
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CompanyName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EmailAddress)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    <hr />

    <h3>Notes:</h3>
    <p>
        @Html.ActionLink("Create New", "Create", "Note", new { customerId = Model.Id }, new { @class = "btn btn-default" })
    </p>
    @Html.Partial("_Notes", Model.Notes)
</div>
